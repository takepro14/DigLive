[
  {
    "name": "api-container",
    "image": "454636438913.dkr.ecr.ap-northeast-1.amazonaws.com/diglive-api:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "db-migrate",
        "awslogs-group": "/ecs/db-migrate"
      }
    },
    "command": ["bundle", "exec", "rails", "db:migrate"],
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "WORKDIR",
        "value": "app"
      },
      {
        "name": "HOST",
        "value": "0.0.0.0"
      },
      {
        "name": "PORT",
        "value": "3000"
      }
    ]
  }
]