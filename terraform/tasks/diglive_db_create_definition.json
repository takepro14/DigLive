[
  {
    "name": "api-container",
    "image": "454636438913.dkr.ecr.ap-northeast-1.amazonaws.com/diglive-api:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "db-create",
        "awslogs-group": "/ecs/db-create"
      }
    },
    "command": ["bundle", "exec", "rails", "db:create"],
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "WORKDIR",
        "value": "app"
      },
      {
        "name": "HOST",
        "value": "0.0.0.0"
      },
      {
        "name": "PORT",
        "value": "3000"
      }
    ],
    "secrets": [
      {
        "name": "DB_NAME",
        "valueFrom": "DB_NAME"
      },
      {
        "name": "DB_HOSTNAME",
        "valueFrom": "DB_HOSTNAME"
      },
      {
        "name": "DB_USERNAME",
        "valueFrom": "DB_USERNAME"
      },
      {
        "name": "DB_PASSWORD",
        "valueFrom": "DB_PASSWORD"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "RAILS_MASTER_KEY"
      }
    ]
  }
]